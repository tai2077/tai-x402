{
  "name": "tai-x402",
  "version": "0.1.0",
  "description": "TAI-x402 - Self-hosted Sovereign AI Agent with x402 Payment",
  "type": "module",
  "main": "dist/tai-main.js",
  "types": "dist/tai-main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/tai-main.d.ts",
      "default": "./dist/tai-main.js"
    },
    "./config.js": {
      "types": "./dist/tai-config.d.ts",
      "default": "./dist/tai-config.js"
    },
    "./state/database.js": {
      "types": "./dist/state/database.d.ts",
      "default": "./dist/state/database.js"
    }
  },
  "bin": {
    "tai-x402": "dist/tai-main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tai2077/tai-x402.git"
  },
  "homepage": "https://github.com/tai2077/tai-x402",
  "keywords": [
    "autonomous-agent",
    "sovereign-ai",
    "x402",
    "ai-payments",
    "self-hosted",
    "deepseek",
    "usdc"
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.28.1",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/tai-main.ts",
    "start": "node dist/tai-main.js --run",
    "setup": "node dist/tai-main.js --setup",
    "status": "node dist/tai-main.js --status",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.3.0",
    "cron-parser": "^4.9.0",
    "gray-matter": "^4.0.3",
    "ora": "^8.0.0",
    "simple-git": "^3.24.0",
    "ulid": "^2.3.0",
    "viem": "^2.44.2",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
